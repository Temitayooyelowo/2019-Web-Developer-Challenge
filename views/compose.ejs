<%- include("partials/header.ejs") -%>

<h1>Compose</h1>

<form action="/compose" method="POST">
    <div class="form-group">
        <label for="composeTitle">Title</label>
        <input class="form-control" id="composeTitle" type="text" name="composeTitle" autocomplete="off">
    </div>

    <div class="form-group">
        <label for="composeMessage">Post</label>
        <textarea name="composeMessage" id="composeMessage" class="form-control" rows="3"></textarea>
    </div>
    
    <button class="btn btn-primary" type="submit" name="publish">Publish</button>
</form>

<%- include("partials/footer.ejs") -%>